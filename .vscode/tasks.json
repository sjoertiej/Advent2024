{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "silent", // This suppresses the terminal from popping up
				"focus": false,
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}